<MudCard Elevation="0">
    <MudCardContent>
        <MudText>
            @Label
        </MudText>
        <MudText Typo="Typo.h4">
           @Total.ToString("C")
        </MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public required string Label { get; set; }

    [Parameter, EditorRequired]
    public required decimal Total { get; set; }

}
